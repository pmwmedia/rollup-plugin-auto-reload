    "@types/node": "18.16.16",
    "@types/ws": "8.5.4",
    "@typescript-eslint/eslint-plugin": "5.59.7",
    "@typescript-eslint/parser": "5.59.7",
    "eslint": "8.41.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "rollup": "3.23.0",
    "rollup-plugin-dts": "5.3.0",
